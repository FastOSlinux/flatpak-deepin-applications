{
  "name": "ffmpeg",
  "cleanup": [ "/include", "/lib/pkgconfig", "/share/ffmpeg/examples" ],
  "build-options" : {
    "arch" : {
      "i386" : {
        "config-opts" : [
          "--arch=x86"
        ]
      },
      "arm" : {
        "config-opts" : [
          "--arch=arm"
        ]
      }
    }
  },
  "config-opts": [
    "--enable-shared",
    "--enable-gpl",
    "--enable-version3",
    "--enable-avresample",
    "--enable-swresample",
    "--disable-static",
    "--enable-gnutls",
    "--disable-doc",
    "--enable-encoders"
  ],
  "sources": [{
    "type": "archive",
    "url": "https://ffmpeg.org/releases/ffmpeg-3.4.tar.xz",
    "sha256": "aeee06e4d8b18d852c61ebbfe5e1bb7014b1e118e8728c1c2115f91e51bffbef"
  }]
}
